
      <h1>My Dogs</h1>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Owner</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @dogs.each do |dog| %>
          <tr>
            <td><%= dog.id %></td>
            <!-- dog_path comes from looking at routes, get prefix and add _path;  dog in () will 'know' to get the id of the dog -->
            <td><%= link_to dog.name,  dog_path(dog) %></td>
            <td><%= dog.breed.try(:name) %></td>
            <td><%= dog.age %></td>
            <td><%= dog.owner.try(:name) %></td>
            <td><%= link_to fa_icon('pencil', text: "edit"), edit_dog_path(dog) %></td>
            <td><%= link_to fa_icon('trash', text: "delete"), dog, method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
     <%= link_to fa_icon('plus', text: "Add a new dog"), new_dog_path, class:"btn btn-info" %>
