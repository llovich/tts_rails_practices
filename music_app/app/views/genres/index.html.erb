<p id="notice"><%= notice %></p>

<h1 class="text-danger">Genres</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to link_to fa_icon('eye', text: "view"), genre %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_genre_path(genre) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-right">
<%= link_to 'Add New Genre', new_genre_path, class:"btn btn-danger" %>
</div>
