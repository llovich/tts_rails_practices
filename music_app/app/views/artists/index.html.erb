<p id="notice"><%= notice %></p>

<h1 class="text-info">Artists</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre.try(:name) %></td>
        <td><%= link_to fa_icon('eye', text: "view"), artist %></td>
        <td><%= link_to fa_icon('pencil', text: "edit"), edit_artist_path(artist) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-right">
<%= link_to 'Add New Artist', new_artist_path, class:"btn btn-info" %>
</div>
